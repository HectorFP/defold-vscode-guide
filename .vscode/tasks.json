{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "bob: clean",
            "type": "shell",
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": [],
            "command": "bash",
            "args": [".vscode/bob.sh", "${config:defold.bob_path}", "clean"]
        },
        {
            "label": "bob: resolve",
            "type": "shell",
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": [],
            "command": "bash",
            "args": [".vscode/bob.sh", "${config:defold.bob_path}", "resolve"]
        },
        {
            "label": "bob: build",
            "type": "shell",
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": [],
            "command": "bash",
            "args": [".vscode/bob.sh", "${config:defold.bob_path}", "build"]
        },
        {
            "label": "bob: bundle",
            "type": "shell",
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": [],
            "command": "bash",
            "args": [".vscode/bob.sh", "${config:defold.bob_path}", "bundle", "${input:architecture}", "${input:texture_compression}"]
        }
    ],
    "inputs": [
        {
            "id": "architecture",
            "description": "Architecture to build",
            "type": "pickString",
            "options": [
                { "label": "iOS 64-bit", "value": "arm64-darwin" },
                { "label": "iOS 32-bit", "value": "armv7-darwin" },
                { "label": "iOS Simulator", "value": "x86_64-ios" },
                { "label": "Android 64-bit", "value": "arm64-android" },
                { "label": "Android 32-bit", "value": "armv7-android" },
                { "label": "macOS 64-bit", "value": "x86_64-darwin" },
                { "label": "Windows 64-bit", "value": "x86_64-win32" },
                { "label": "Windows 32-bit", "value": "x86-win32" },
                { "label": "Linux 64-bit", "value": "x86_64-linux" },
                { "label": "HTML5", "value": "js-web" }
            ]
        },
        {
            "id": "texture_compression",
            "description": "Compress the textures?",
            "type": "pickString",
            "options": [
                { "label": "Texture compression", "value": "true" },
                { "label": "Texture compression", "value": "false" }
            ]
        }        
    ]
}